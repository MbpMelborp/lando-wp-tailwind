{
  "id": "reveal",
  "displayName": "Reveal",
  "category": "Layout",
  "tag": "div",
  "classNames": "transition duration-700",
  "allowChildren": true,
  "scripts": ["gust-intersection-reveal"],
  "options": [
    {
      "name": "effect",
      "label": "Effect",
      "modify": "attribute",
      "attributeName": "data-gust-reveal-class",
      "type": "select",
      "options": [
        {
          "label": "Slide up",
          "value": "translate-y-8 opacity-0"
        },
        {
          "label": "Slide down",
          "value": "-translate-y-8 opacity-0"
        },
        {
          "label": "Slide left",
          "value": "-translate-x-8 opacity-0"
        },
        {
          "label": "Slide right",
          "value": "translate-x-8 opacity-0"
        },
        {
          "label": "Fade in",
          "value": "opacity-0"
        }
      ]
    }
  ]
}
